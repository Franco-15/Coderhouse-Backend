<div class="loginContainer">
    <div class="restorePassword">
        <h1 style="margin-bottom: 30px; font-size: 3rem">Restaurar Contraseña</h1>

        <form id="newPassword">
            <table>
                <tr>
                    <td><label class="form-label" style="font-size:1.3rem;">Usuario ID: </label></td>
                    <td><input type="text" name="userId" class="form-control" style="margin: 10px 0px 10px 10px" 
                             value="{{user.id}}"/></td>
                </tr>
                <tr>
                    <td><label class="form-label" style="font-size:1.3rem;">Contraseña: </label></td>
                    <td><input type="password" name="password" class="form-control" style="margin: 10px 0px 10px 10px"
                            required /></td>
                </tr>
                <tr>
                    <td><label class="form-label" style="font-size:1.3rem;">Repetir constraseña: </label></td>
                    <td><input type="password" name="repeatPassword" class="form-control"
                            style="margin: 10px 0px 10px 10px;" required /></td>
                </tr>
                <tr>
                    <td><input class="btn btn-primary" style="font-size:1.1rem;" type="submit" /></td>
                </tr>
            </table>
        </form>
    </div>

</div>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script type="text/javascript" src="https://cdn.jsdelivr.net/npm/toastify-js"></script>
<script src="/js/password.js"></script>